{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "./website",
        "outDir": "./web",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "./lib/*"
            ]
        }
    },
    "include": [
        "website/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/*.ts",
    ]
}
