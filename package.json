{
  "name": "partial-ai",
  "version": "0.1.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "workspaces": [
    "src",
    "website"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:lib": "tsup src/**/*.ts --format esm,cjs --dts --clean",
    "build:web": "tsc -p tsconfig.website.json",
    "build": "npm run build:lib && npm run build:web"
  },
  "author": "Yanael Barbier",
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "tsup": "^7.2.0"
  }
}
